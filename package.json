{
  "name": "cosmic-forge-grocery-pos",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:security": "vitest run test/phase6.security.test.ts test/phase7.modules.test.ts test/phase8.security.test.ts",
    "test:performance": "vitest run test/phase6.performance.test.ts test/phase7.performance.test.ts test/phase8.performance.test.ts",
    "test:chaos": "vitest run test/phase6.chaos.test.ts test/phase7.chaos.test.ts test/phase8.chaos.test.ts",
    "test:soak": "vitest run test/phase6_1.operational.test.ts -t \"10h simulated soak load\"",
    "ci:gate": "tsx scripts/ci-gate.ts"
  },
  "dependencies": {
    "express": "^4.21.2",
    "pdfkit": "^0.15.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "@types/pdfkit": "^0.13.9",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
